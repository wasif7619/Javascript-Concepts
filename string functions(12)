console.log(a.toLowerCase())

console.log(a.slice(2,5)) //for breaking the statement in limit 
console.log(a.slice(2)) //for breaking the statement  till end 

console.log(a.replace('Wasif','Ali')) //for replacing the string 

console.log(a.concat(" is firend of  ",b,":)")) //for concating the strings

